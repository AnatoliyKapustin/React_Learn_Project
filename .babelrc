{
  "plugins": [
    "syntax-dynamic-import",
    "transform-decorators-legacy",
    "transform-class-properties"
  ],
  "presets": [
    [
      "env",
      {
        "targets": {
          "chrome": 56,
          "browsers": [
            "last 2 versions",
            "safari 7"
          ]
        },
        "modules": false,
        "loose": true
      }
    ],
    "react",
    "flow",
    "stage-0"
  ],
  "env": {
    "development": {
      "plugins": [
        "react-hot-loader/babel"
      ]
    },
    "test": {
      "plugins": [
        "transform-es2015-modules-commonjs",
        "dynamic-import-node"
      ]
    }
  }
}